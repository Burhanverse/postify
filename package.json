{
  "name": "Postify",
  "version": "0.9.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json && node post-build.mjs",
    "lint": "eslint . --ext .ts",
